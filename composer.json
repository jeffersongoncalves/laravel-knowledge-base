{
    "name": "jeffersongoncalves/laravel-knowledge-base",
    "description": "A Laravel package for building knowledge bases with articles, categories, versioning, and feedback",
    "keywords": [
        "laravel",
        "knowledge-base",
        "kb",
        "articles",
        "documentation",
        "wiki",
        "faq"
    ],
    "homepage": "https://github.com/jeffersongoncalves/laravel-knowledge-base",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jefferson Simão Gonçalves",
            "email": "gerson.simao.92@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/events": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.15"
    },
    "require-dev": {
        "larastan/larastan": "^2.9|^3.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "JeffersonGoncalves\\KnowledgeBase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JeffersonGoncalves\\KnowledgeBase\\Tests\\": "tests/",
            "JeffersonGoncalves\\KnowledgeBase\\Database\\Factories\\": "database/factories/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JeffersonGoncalves\\KnowledgeBase\\KnowledgeBaseServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
